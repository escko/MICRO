    //  this works with R  //
    morph_lshft: morph_lshft {
            compatible = "zmk,behavior-mod-morph";
            #binding-cells = <0>;
            bindings = <&kp LG(R)>, <&hwu LS(LA(LGUI)) LA(LG(R))>;
            mods = <(MOD_LALT)>;
            keep-mods = <(MOD_LALT)>;
        };
    morph_r: morph_r {
            compatible = "zmk,behavior-mod-morph";
            #binding-cells = <0>;
            bindings = <&kp R>, <&morph_lshft>;
            mods = <(MOD_LGUI)>;
        };
        
// Use for combine lalt command //
    morph_qnest: morph_qnest {
            compatible = "zmk,behavior-mod-morph";
            #binding-cells = <0>;
