 keymap {
    compatible = "zmk,keymap";

    MAC {
    bindings = <
    &morph_q &kp W &mt1 BACKSLASH E &morph_rshft
    &mt2 LCTRL A &kp D &kp F &motap ENCODER N4 &hwu LGUI C 
    &motap MEDIA Z &hwu LSHFT V &hwu LALT X>;
    sensor-bindings = <&rot_kp UP DOWN>; };

    ANDROID {
    bindings = <
    &morph_q &kp W &mt1 BACKSLASH E &morph_rshft
    &mt2 LCTRL A &kp D &kp F &motap ENCODER N4 &mt1 LGUI C 
    &motap MEDIA Z &mt1 LSHFT V &mt1 LALT X>;
    sensor-bindings = <&rot_kp UP DOWN>; };

    INFINITE {
    bindings = <     
    &mt1 P LS(B) &kp K &e_cmdz &mtr O B       
    &mt1 BACKSLASH SLASH &kp W &mt3 LS(LA(I)) F &motap ENCODER N5 &mt1 LALT I  
    &mt3 LG(U) LG(B) &mt1 LSHFT T &mt1 LGUI V>;       
    sensor-bindings = <&rot_kp LBKT RBKT>; };

    LAYERS {
    bindings = <
    &none &none &mt3 LALT N7 &mt3 LSHFT N6
    &none &kp LG(U) &kp LG(B) &mt3 LS(LG(B)) LS(LG(U)) &mt3 LG(N) N                      
    &kp LA(M) &mt3 LSHFT LS(DEL) &mt3 LG(M) M>;
    sensor-bindings = <&rot_kp COMMA PERIOD>; };
    
    ROTATE {
    bindings = <
    &none &none &none &none
    &none &none &none &kp LA(LG(N0)) &kp SPACE
    &kp LS(EQUAL) &kp LC(EQUAL) &kp MINUS>;
    sensor-bindings = <&rot_kp LBKT RBKT>; };

    VIEW {
    bindings = <
    &none &none &none &none
    &none &kp SEMI &kp SQT &kp TAB &kp SPACE
    &mt3 N9 N8 &mt3 N7 N6 &kp SLASH>;
    sensor-bindings = <&rot_msc SCRL_DOWN SCRL_UP>; };

    VIEW2 {
    bindings = <
    &none &none &mt3 N9 N8 &kp SLASH
    &none &kp N9 &kp N8 &kp TAB &kp SPACE
    &kp N7 &kp N6 &kp SLASH>;
    sensor-bindings = <&rot_kp LS(LG(SEMI)) LG(MINUS)>; };

    HISTORY {
    bindings = <
    &none &none &none &none
    &none &none &none &none &none
    &none &none &none>;
    sensor-bindings = <&rot_kp LG(Z) LS(LG(Z))>; };

    MEDIA {
    bindings = <
    &kp TAB &mt3 LG(W) LA(P) &kp LS(LA(LG(BACKSLASH))) &bt BT_NXT
    &bt BT_SEL 0 &bt BT_SEL 1 &kp F4 &kp F4 &kp C_PLAY_PAUSE 
    &none &mt3 LC(LA(LS(V))) LC(LA(LS(C))) &mt3 LC(LA(LS(W))) LC(LA(LS(X))) >;    
    sensor-bindings = <&rot_kp C_VOL_DN C_VOL_UP>; };

    ENCODER {
    bindings = <
    &trans &trans &trans &trans
    &trans &trans &trans &trans &trans
    &trans &trans &trans>;
    sensor-bindings = <&rot_kp LEFT RIGHT>; };
            
    BLUE {
    bindings = <
    &rgb_ug RGB_EFF &rgb_ug RGB_BRI &rgb_ug RGB_SAI &rgb_ug RGB_EFF
    &none &rgb_ug RGB_BRD &rgb_ug RGB_SAD &bt BT_CLR_ALL &ext_power EP_TOG    
    &none &bt BT_CLR &out OUT_TOG>;
    sensor-bindings = <&rgb_encoder>; };
    };
